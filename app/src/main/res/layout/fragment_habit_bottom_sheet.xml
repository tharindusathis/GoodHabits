<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/habitBottomSheetConstraintLayout"
style="@style/Animation.Design.BottomSheetDialog"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#fff"
app:behavior_hideable="false"
app:behavior_peekHeight="@dimen/bottom_sheet_peek_height"
app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:id="@+id/text_habits_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_text_habit_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="@string/habit_name_edit_text"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/button_save_habit_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/habit_add_button_text" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>