<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoodHabits" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.Default.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Default.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Default.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Default.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Default.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Default.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Default.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Default.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Default.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Default.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Default.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Default.Overline</item>

        <item name="emphasisHighAlpha">0.87</item>
        <item name="emphasisMediumAlpha">0.60</item>
        <item name="emphasisDisabledAlpha">0.38</item>

        <item name="motionInterpolatorPersistent">@android:interpolator/fast_out_slow_in</item>
        <item name="motionInterpolatorIncoming">@android:interpolator/decelerate_cubic</item>
        <item name="motionInterpolatorOutgoing">@android:interpolator/accelerate_cubic</item>
    </style>

    <style name="Theme.GoodHabits.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GoodHabits.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GoodHabits.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/bottom_sheet_peek_height</item>
    </style>
</resources>